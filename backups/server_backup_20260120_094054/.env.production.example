# =============================================
# PRODUCTION ENVIRONMENT VARIABLES
# VPS ga deploy qilishdan oldin bu faylni .env ga nusxalang
# va qiymatlarni to'g'ri o'rnating
# =============================================

# Node Environment
NODE_ENV=production

# Server Port
PORT=8000

# MongoDB Connection (Atlas yoki local)
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/DATABASE?retryWrites=true&w=majority

# JWT Secret - MUHIM: Kuchli va unikal parol qo'ying!
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_123456

# Client URL (CORS uchun)
CLIENT_URL=http://YOUR_VPS_IP:8000
CLIENT_URL_PROD=https://your-domain.com

# Telegram Bot Token (asosiy - sotuvlar uchun)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Telegram Bot for Debts (qarzlar uchun)
TELEGRAM_DEBT_BOT_TOKEN=your_debt_bot_token
TELEGRAM_DEBT_CHAT_ID=your_debt_chat_id

# POS Telegram Bot (mijozlar uchun)
POS_TELEGRAM_BOT_TOKEN=your_pos_bot_token
POS_ADMIN_CHAT_ID=your_admin_chat_id

# Hamkorlar Bot
PARTNER_BOT_TOKEN=your_partner_bot_token
PARTNER_CHAT_ID=your_partner_chat_id

# Hamkorlar Chat ID lari
UZUM_CHAT_ID=your_uzum_chat_id
ISHONCH_CHAT_ID=your_ishonch_chat_id
YANDEX_CHAT_ID=your_yandex_chat_id
