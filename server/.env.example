# =============================================
# ENVIRONMENT VARIABLES EXAMPLE
# Copy this file to .env and fill in your values
# NEVER commit .env file to Git!
# =============================================

# Node Environment
NODE_ENV=development

# Server Port
PORT=8000

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret - IMPORTANT: Use a strong, unique secret!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Admin Credentials
ADMIN_LOGIN=Admin321
ADMIN_PASSWORD=Admin123

# Client URL (CORS)
CLIENT_URL=http://localhost:5173
CLIENT_URL_PROD=https://your-domain.com

# Telegram Bot Token (main - for sales)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Telegram Bot for Debts
TELEGRAM_DEBT_BOT_TOKEN=your_debt_bot_token
TELEGRAM_DEBT_CHAT_ID=your_debt_chat_id

# POS Telegram Bot (for customers)
POS_TELEGRAM_BOT_TOKEN=your_pos_bot_token
POS_ADMIN_CHAT_ID=your_admin_chat_id

# Partner Bot
PARTNER_BOT_TOKEN=your_partner_bot_token
PARTNER_CHAT_ID=your_partner_chat_id

# Partner Chat IDs
UZUM_CHAT_ID=your_uzum_chat_id
ISHONCH_CHAT_ID=your_ishonch_chat_id
YANDEX_CHAT_ID=your_yandex_chat_id
